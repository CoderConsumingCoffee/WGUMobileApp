<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 tools:context="com.aphart.wgumobileapp.ViewEditAllTermsActivity">

   <android.support.v7.widget.Toolbar
       android:id="@+id/my_toolbar"
       android:layout_width="match_parent"
       android:layout_height="?attr/actionBarSize"
       android:background="?attr/colorPrimary"
       android:elevation="4dp"
       android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
       android:popupTheme="@style/ThemeOverlay.AppCompat.Light"

       />


      <FrameLayout
          android:layout_width="400dp"
          android:layout_height="fill_parent"


          android:id="@+id/viewEditAllTermsFrame"
          android:name="com.aphart.wgumobileapp.ViewTermsFragment">

      </FrameLayout>
      <FrameLayout
          android:id="@+id/turtle"
          android:layout_width="fill_parent"
          android:layout_height="match_parent"
         android:name="com.aphart.wgumobileapp.AddTermFragment">

      </FrameLayout>




</RelativeLayout>

   <ListView android:id="@+id/left_drawer"
       android:layout_width="240dp"
       android:layout_height="match_parent"
       android:layout_gravity="start"
       android:choiceMode="singleChoice"
       android:divider="@android:color/transparent"
       android:dividerHeight="0dp"
       android:background="#111"/>

</android.support.v4.widget.DrawerLayout>